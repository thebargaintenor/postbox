{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [ "ES2018", "DOM" ],
        "allowJs": true,
        "alwaysStrict": true,
        "declaration": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "jsx": "react",
        "noFallthroughCasesInSwitch": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}